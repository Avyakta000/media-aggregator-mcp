# FinanceMCP Environment Configuration
# Copy this file to .env and fill in your API keys

# ==================== MCP SERVER SETTINGS ====================
# Server name (default: FinanceMCP)
MCP_SERVER_NAME=FinanceMCP

# ==================== FINANCIAL API KEYS ====================
# Alpha Vantage API Key (for stock and forex data)
# Get free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=93G65S7ZD51ULD40

# FRED API Key (for macroeconomic data)
# Get free key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=3e612b6747a2618c0cfd727a52e5a123

# ==================== MCPAUTH SETTINGS ====================
# Issuer (for MCPAuth integration)
# Optional: Only needed if using MCPAuth
AUTH_ISSUER=your_authkit_domain_here

# Resource for the server
# Optional: Only needed if using MCPAuth
RESOURCE=http://localhost:8000

# ==================== DEFAULT SETTINGS ====================
# Default currency for forex operations
DEFAULT_CURRENCY=USD

# Default market for crypto operations
DEFAULT_MARKET=US

# Default timeframe for historical data
DEFAULT_TIMEFRAME=1d

# ==================== RATE LIMITING ====================
# Requests per minute (default: 60)
REQUESTS_PER_MINUTE=60

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL_SECONDS=300

# ==================== HTTP SETTINGS ====================
# Request timeout in seconds (default: 15)
REQUEST_TIMEOUT_SECONDS=15

# Maximum retry attempts (default: 3)
REQUEST_MAX_RETRIES=3

# Retry backoff in seconds (default: 1.0)
REQUEST_RETRY_BACKOFF_SECONDS=1.0


